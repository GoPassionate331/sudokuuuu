<?xml version="1.0" encoding="utf-8"?>
<!-- This file controls the button's BACKGROUND color -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the button is selected, the background is blue -->
    <item android:state_selected="true" android:color="@color/actionButtonCheck" />
    <!-- By default, the background is gray -->
    <item android:color="@color/numberPadBackground" />
</selector>